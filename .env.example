# Пример файла с переменными окружения

# Настройки подключения к БД
POSTGRES_USER=username
POSTGRES_PASSWORD=password
POSTGRES_DB=db_name
POSTGRES_SERVER=server_address
POSTGRES_PORT=server_port

# Redis
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/postgres
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=1800
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_PING=true
DATABASE_ECHO_SQL=false

# Celery
CELERY_BROKER_DB=1 # Redis DB для брокера (очереди задач)
CELERY_RESULT_DB=2 # Redis DB для result-backend (результаты задач)
CELERY_TIMEZONE=Europe/Moscow # Таймзона для Celery/Beat (влияет на расписание)
CELERY_ENABLE_UTC=true # Хранить время в UTC внутри Celery
CELERY_TASK_TRACK_STARTED=true # Отмечать задачи статусом STARTED
CELERY_BROKER_CONNECTION_RETRY_ON_STARTUP=true # Ретрай подключения к брокеру при старте (актуально в Docker)

# Параметры для отправки уведомлений по почте
MAIL_SERVER=smtp.yandex.ru # SMTP сервер Яндекс.Почты
MAIL_PORT=465 # Порт SMTP (465 для SSL)
MAIL_SSL=true # Использовать SSL (для 465 должно быть true)
MAIL_TLS=false # STARTTLS (для 587 true, для 465 обычно false)
MAIL_USERNAME=your_login@yandex.ru # Логин SMTP (полный email)
MAIL_PASSWORD=app_password # Пароль приложения (не обычный пароль от аккаунта)
MAIL_FROM=your_login@yandex.ru # Email отправителя (обычно совпадает с логином)
MAIL_FROM_NAME=Cafe Booking System # Отображаемое имя отправителя
MAIL_USE_CREDENTIALS=true # Использовать авторизацию (login/password)
MAIL_VALIDATE_CREDS=true # Валидировать наличие логина/пароля в настройках
